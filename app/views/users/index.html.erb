<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th>Role</th>
    <th>Active</th>
    <th>Activation code</th>
    <th>Activation code generated</th>
    <th>Last login</th>
    <th>Password salt</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%=h user.password %></td>
    <td><%=h user.role %></td>
    <td><%=h user.active %></td>
    <td><%=h user.activation_code %></td>
    <td><%=h user.activation_code_generated %></td>
    <td><%=h user.last_login %></td>
    <td><%=h user.password_salt %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

