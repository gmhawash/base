<h1>Listing ratings</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Contractor</th>
    <th>Service</th>
    <th>Start date</th>
    <th>Response</th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%=h rating.project_id %></td>
    <td><%=h rating.contractor_id %></td>
    <td><%=h rating.service_id %></td>
    <td><%=h rating.start_date %></td>
    <td><%=h rating.response %></td>
    <td><%= link_to 'Show', rating %></td>
    <td><%= link_to 'Edit', edit_rating_path(rating) %></td>
    <td><%= link_to 'Destroy', rating, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New rating', new_rating_path %>